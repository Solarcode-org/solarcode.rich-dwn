{
	"name": "rich-dwn",
	"displayName": "Rich Dawn",
	"description": "Rich support for the Dawn Programming Language",
	"author": {
		"name": "ArnabRollin",
		"email": "iamarnab.phukan+solarcodext@gmail.com",
		"url": "https://github.com/ArnabRollin"
	},
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Solarcode-org/solarcode.rich-dwn"
	},
	"publisher": "Solarcode-org",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.52.0"
	},
	"activationEvents": [
		"onLanguage:dwn"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Multi LSP configuration",
			"properties": {
				"lspMultiServerSample.enable": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Controls the enablement."
				},
				"lspMultiServerSample.options": {
					"scope": "resource",
					"type": "object",
					"default": {},
					"description": "Additional options."
				},
				"lspMultiServerSample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VSCode and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "bun run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && bun install && cd ../server && bun install && cd .."
	},
	"devDependencies": {
		"@types/mocha": "^5.2.0",
		"@types/node": "^16.18.34",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"eslint": "^8.26.0",
		"typescript": "^5.3.2"
	}
}
